<UserControl x:Class="WorkLogWpf.Views.Controls.WeekCalendarVertical.CalendarBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="30"
             MinHeight="30"
             Cursor="SizeAll">
    <Border x:Name="BlockBorder"
            Background="#69B5FF"
            BorderBrush="#1460AA"
            BorderThickness="1"
            CornerRadius="0"
            SnapsToDevicePixels="True">
        <Grid>
            <!-- Resize úchyty -->
            <Thumb x:Name="TopThumb" Height="5" VerticalAlignment="Top" Cursor="SizeNS">
                <Thumb.Template>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#69B5FF">
                        </Border>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>

            <Thumb x:Name="BottomThumb" Height="5" VerticalAlignment="Bottom" Cursor="SizeNS">
                <Thumb.Template>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#69B5FF">
                        </Border>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ikona -->
                <Image x:Name="BlockImageInfo"
                    Width="32"
                    Margin="4,8,4,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Grid.Column="0"
                    Visibility="Collapsed" />

                <!-- Titulky ve StackPanelu -->
                <Grid x:Name="TitleGrid"
                    Grid.Column="1"
                      Margin="8,6,4,4">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="BlockTitle"
                   Text="Titulek"
                   Foreground="#062038"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                                   Margin="0,0,0,4 "/>

                        <TextBlock x:Name="BlockSubtitle"
                   Text=""
                   Foreground="#062038"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>
                    </StackPanel>

                </Grid>
            </Grid>


        </Grid>
    </Border>
</UserControl>
